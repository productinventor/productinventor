// Prisma schema for Slack File Checkout System
// This schema defines the data model for managing file uploads, versioning,
// checkout locks, and comprehensive audit logging within Slack workspaces.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum AuditEventType {
  FILE_UPLOAD
  FILE_DOWNLOAD
  FILE_VIEW
  FILE_CHECKOUT
  FILE_CHECKIN
  FILE_DELETE
  FILE_RESTORE
  ACCESS_GRANTED
  ACCESS_DENIED
  ACCESS_REVOKED
  PROJECT_CREATE
  PROJECT_DELETE
  PROJECT_MEMBER_ADD
  PROJECT_MEMBER_REMOVE
  DOWNLOAD_TOKEN_CREATED
  DOWNLOAD_TOKEN_USED
  DOWNLOAD_TOKEN_EXPIRED
  SECURE_DELETE_STARTED
  SECURE_DELETE_COMPLETED
  ADMIN_OVERRIDE
  LOCK_FORCE_RELEASE
}

enum AuditOutcome {
  SUCCESS
  FAILURE
  DENIED
  PARTIAL
}

enum DeletionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  VERIFIED
}

// =============================================================================
// MODELS
// =============================================================================

/// User - Slack user mapping
/// Maps Slack users to internal user records for tracking ownership and actions
model User {
  id          String   @id @default(cuid())
  slackUserId String
  slackTeamId String
  displayName String
  email       String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  createdProjects  Project[]       @relation("ProjectCreator")
  uploadedVersions FileVersion[]   @relation("VersionUploader")
  fileLocks        FileLock[]      @relation("LockOwner")
  sharedReferences FileReference[] @relation("ReferenceSharer")
  auditLogs        AuditLog[]      @relation("AuditUser")
  deletionRequests DeletionRecord[] @relation("DeletionRequester")

  @@unique([slackUserId, slackTeamId])
  @@index([slackUserId])
  @@index([slackTeamId])
}

/// Project - File hub per channel
/// Each Slack channel can have one project/file hub for organizing files
model Project {
  id           String   @id @default(cuid())
  name         String
  slackTeamId  String
  hubChannelId String   @unique
  createdById  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  createdBy       User             @relation("ProjectCreator", fields: [createdById], references: [id])
  files           File[]           @relation("ProjectFiles")
  fileReferences  FileReference[]  @relation("ProjectReferences")
  auditLogs       AuditLog[]       @relation("AuditProject")
  deletionRecords DeletionRecord[] @relation("DeletionProject")

  @@index([slackTeamId])
  @@index([createdById])
}

/// File - Files in projects
/// Represents a file within a project, tracking its current state and location
model File {
  id             String   @id @default(cuid())
  projectId      String
  name           String
  path           String
  contentHash    String
  sizeBytes      BigInt
  mimeType       String?
  currentVersion Int      @default(1)
  hubMessageTs   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  project         Project         @relation("ProjectFiles", fields: [projectId], references: [id], onDelete: Cascade)
  versions        FileVersion[]   @relation("FileVersions")
  lock            FileLock?       @relation("FileLock")
  references      FileReference[] @relation("FileReferences")
  auditLogs       AuditLog[]      @relation("AuditFile")
  deletionRecords DeletionRecord[] @relation("DeletionFile")

  @@unique([projectId, path])
  @@index([projectId])
  @@index([contentHash])
  @@index([hubMessageTs])
}

/// FileVersion - Version history
/// Tracks all versions of a file for history and rollback capabilities
model FileVersion {
  id            String   @id @default(cuid())
  fileId        String
  versionNumber Int
  contentHash   String
  sizeBytes     BigInt
  uploadedById  String
  message       String?
  createdAt     DateTime @default(now())

  // Relations
  file       File       @relation("FileVersions", fields: [fileId], references: [id], onDelete: Cascade)
  uploadedBy User       @relation("VersionUploader", fields: [uploadedById], references: [id])
  auditLogs  AuditLog[] @relation("AuditFileVersion")

  @@unique([fileId, versionNumber])
  @@index([fileId])
  @@index([uploadedById])
  @@index([contentHash])
  @@index([createdAt])
}

/// FileLock - Checkout locks
/// Manages exclusive checkout locks to prevent concurrent edits
model FileLock {
  id         String    @id @default(cuid())
  fileId     String    @unique
  lockedById String
  lockedAt   DateTime  @default(now())
  expiresAt  DateTime?
  lockReason String?

  // Relations
  file     File @relation("FileLock", fields: [fileId], references: [id], onDelete: Cascade)
  lockedBy User @relation("LockOwner", fields: [lockedById], references: [id])

  @@index([lockedById])
  @@index([expiresAt])
}

/// FileReference - Reference cards shared elsewhere
/// Tracks when files are shared/referenced in other channels
model FileReference {
  id            String   @id @default(cuid())
  fileId        String
  projectId     String
  sharedById    String
  sharedAt      DateTime @default(now())
  sharedVersion Int
  channelId     String
  messageTs     String
  threadTs      String?

  // Relations
  file     File    @relation("FileReferences", fields: [fileId], references: [id], onDelete: Cascade)
  project  Project @relation("ProjectReferences", fields: [projectId], references: [id], onDelete: Cascade)
  sharedBy User    @relation("ReferenceSharer", fields: [sharedById], references: [id])

  @@unique([channelId, messageTs])
  @@index([fileId])
  @@index([projectId])
  @@index([sharedById])
  @@index([channelId])
}

/// AuditLog - Comprehensive audit logging
/// Records all significant actions for security and compliance tracking
model AuditLog {
  id            String         @id @default(cuid())
  timestamp     DateTime       @default(now())
  eventType     AuditEventType
  outcome       AuditOutcome
  userId        String?
  slackUserId   String?
  ipAddress     String?
  userAgent     String?
  projectId     String?
  fileId        String?
  fileVersionId String?
  details       Json?

  // Relations
  user        User?        @relation("AuditUser", fields: [userId], references: [id], onDelete: SetNull)
  project     Project?     @relation("AuditProject", fields: [projectId], references: [id], onDelete: SetNull)
  file        File?        @relation("AuditFile", fields: [fileId], references: [id], onDelete: SetNull)
  fileVersion FileVersion? @relation("AuditFileVersion", fields: [fileVersionId], references: [id], onDelete: SetNull)

  @@index([timestamp])
  @@index([userId])
  @@index([projectId])
  @@index([fileId])
  @@index([eventType])
  @@index([outcome])
  @@index([slackUserId])
  @@index([timestamp, eventType])
  @@index([projectId, timestamp])
  @@index([fileId, timestamp])
}

/// DeletionRecord - Secure deletion tracking
/// Tracks file deletion requests and their secure wipe status
model DeletionRecord {
  id               String         @id @default(cuid())
  requestedAt      DateTime       @default(now())
  completedAt      DateTime?
  requestedById    String
  projectId        String?
  fileId           String?
  contentHash      String?
  reason           String?
  status           DeletionStatus @default(PENDING)
  secureWipeUsed   Boolean        @default(false)
  verificationHash String?

  // Relations
  requestedBy User     @relation("DeletionRequester", fields: [requestedById], references: [id])
  project     Project? @relation("DeletionProject", fields: [projectId], references: [id], onDelete: SetNull)
  file        File?    @relation("DeletionFile", fields: [fileId], references: [id], onDelete: SetNull)

  @@index([requestedById])
  @@index([projectId])
  @@index([fileId])
  @@index([status])
  @@index([requestedAt])
  @@index([contentHash])
}
