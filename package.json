{
  "name": "ecometrics-sustainability-platform",
  "version": "1.0.0",
  "description": "AI-first sustainability SaaS platform for carbon tracking, ESG reporting, and environmental impact management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "sustainability",
    "carbon-tracking",
    "esg-reporting",
    "ai",
    "machine-learning",
    "environmental-impact",
    "climate-tech",
    "saas"
  ],
  "author": "Product Inventor",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@prisma/client": "^5.22.0",
    "@slack/bolt": "^3.21.0",
    "express": "^4.18.2",
    "ioredis": "^5.4.1",
    "mime-types": "^2.1.35",
    "openai": "^4.28.0",
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
