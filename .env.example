# ===========================================
# Slack File Checkout System - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Slack App Credentials
# -------------------------------------------
# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Signing Secret (found in App Credentials)
SLACK_SIGNING_SECRET=your-signing-secret

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/slack_file_checkout?schema=public

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Redis connection URL for caching and distributed locks
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# File Storage Configuration
# -------------------------------------------
# Base path for content-addressed file storage
STORAGE_PATH=/var/lib/slack-files/storage

# -------------------------------------------
# Encryption Configuration
# -------------------------------------------
# Master encryption key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=your-base64-encoded-32-byte-key

# Encryption mode: 'aes-256-gcm' (recommended) or 'aes-256-cbc'
ENCRYPTION_MODE=aes-256-gcm

# -------------------------------------------
# Security Configuration
# -------------------------------------------
# Download token expiry in seconds (default: 300 = 5 minutes)
DOWNLOAD_TOKEN_EXPIRY_SECONDS=300

# Enable secure file deletion (overwrite before delete)
SECURE_DELETE_ENABLED=true

# Audit log retention period in years
AUDIT_LOG_RETENTION_YEARS=7

# -------------------------------------------
# File Lock Configuration
# -------------------------------------------
# Default lock expiry in hours
LOCK_EXPIRY_HOURS=24

# -------------------------------------------
# Application Configuration
# -------------------------------------------
# Node environment: development, staging, production
NODE_ENV=development

# Application port for HTTP server
PORT=3000

# -------------------------------------------
# Optional: Advanced Configuration
# -------------------------------------------
# Maximum file size in bytes (default: 100MB)
# MAX_FILE_SIZE_BYTES=104857600

# Allowed file extensions (comma-separated, empty = all allowed)
# ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt,.md

# Maximum concurrent downloads per user
# MAX_CONCURRENT_DOWNLOADS=5

# Session timeout in minutes
# SESSION_TIMEOUT_MINUTES=480
