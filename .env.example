# ===========================================
# EcoMetrics Sustainability Platform - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Application Configuration
# -------------------------------------------
# Node environment: development, staging, production
NODE_ENV=development

# Application port for HTTP server
PORT=3000

# API base URL (for webhooks, callbacks)
API_BASE_URL=http://localhost:3000

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/ecometrics?schema=public

# -------------------------------------------
# Redis Configuration
# -------------------------------------------
# Redis connection URL for caching and session management
REDIS_URL=redis://localhost:6379

# -------------------------------------------
# AI Service Configuration
# -------------------------------------------
# OpenAI API key for GPT-4 powered insights
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI model to use (gpt-4, gpt-4-turbo-preview, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API key for Claude powered insights (optional alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Anthropic model to use (claude-3-opus-20240229, claude-3-sonnet-20240229)
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AI provider: 'openai' or 'anthropic'
AI_PROVIDER=openai

# -------------------------------------------
# Sustainability Data Configuration
# -------------------------------------------
# Default carbon emission factors database version
EMISSION_FACTORS_VERSION=2024.1

# Default electricity grid carbon intensity (kg CO2e/kWh)
# This is used when location-specific data is unavailable
DEFAULT_GRID_INTENSITY=0.475

# Enable automatic data quality scoring
DATA_QUALITY_SCORING_ENABLED=true

# -------------------------------------------
# Security & Encryption
# -------------------------------------------
# Master encryption key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=your-base64-encoded-32-byte-key

# JWT secret for API authentication
JWT_SECRET=your-jwt-secret-key

# Session secret
SESSION_SECRET=your-session-secret

# -------------------------------------------
# File Storage Configuration
# -------------------------------------------
# Base path for file storage (reports, uploads, etc.)
STORAGE_PATH=/var/lib/ecometrics/storage

# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE_BYTES=10485760

# -------------------------------------------
# Audit & Compliance
# -------------------------------------------
# Audit log retention period in years
AUDIT_LOG_RETENTION_YEARS=7

# Enable detailed API request logging
API_REQUEST_LOGGING_ENABLED=true

# -------------------------------------------
# External Integrations (Optional)
# -------------------------------------------
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email service configuration (for reports and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_ADDRESS=noreply@ecometrics.io

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Enable supply chain tracking features
SUPPLY_CHAIN_ENABLED=true

# Enable predictive analytics
PREDICTIVE_ANALYTICS_ENABLED=true

# Enable natural language query interface
NLQ_ENABLED=true

# Enable automated ESG report generation
ESG_REPORTING_ENABLED=true

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
# API rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# AI query rate limit (queries per hour per user)
AI_QUERY_LIMIT_PER_HOUR=100

# -------------------------------------------
# Optional: Slack Integration
# -------------------------------------------
# Bot User OAuth Token (starts with xoxb-) - for Slack integration
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Signing Secret (found in App Credentials)
SLACK_SIGNING_SECRET=your-signing-secret

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token
